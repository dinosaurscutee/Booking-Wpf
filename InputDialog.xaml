<Window x:Class="TableManage.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TableManage"
        mc:Ignorable="d"
        Title="InputDialog" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="{Binding Prompt}" Margin="0 0 0 10"/>
            <TextBox Name="InputTextBox"/>
            <Button Content="OK" Name="OKButton" Margin="0 10 0 0" HorizontalAlignment="Right" Click="OKButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
